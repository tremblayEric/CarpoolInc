<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:background="#c8e49d"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".CreationProfil"
        android:background="#c8e49d">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:id="@+id/imageView"
                    android:src="@drawable/carpoolicon"
                    android:layout_marginRight="50dp"
                    />

                <TextView android:text="CarPool Inc."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textColor="#ff000000"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Création compte"
                    android:id="@+id/textView2"
                    android:textAlignment="center"
                    android:textSize="@dimen/abc_text_size_headline_material"
                    android:textColor="#ff000000"
                    android:layout_below="@+id/textView"
                    android:layout_alignStart="@+id/textView" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Pseudo"
                    android:id="@+id/pseudo"
                    android:layout_alignParentStart="true"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:layout_alignEnd="@+id/pseudo"
                    android:layout_gravity="center|right" />
                <EditText
                    android:id="@+id/txtPseudo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/abc_action_bar_progress_bar_size"
                    android:layout_weight="0.75"
                    android:ems="10" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nom"
                    android:id="@+id/nom"
                    android:layout_below="@+id/pseudo"
                    android:layout_alignParentStart="true"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:layout_alignEnd="@+id/pseudo"
                    android:layout_gravity="center|right" />
                <EditText
                    android:id="@+id/txtNom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Prénom"
                    android:id="@+id/prenom"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:layout_gravity="center|right" />
                <EditText
                    android:id="@+id/txtPrenom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Date de naissance"
                    android:id="@+id/labelCalendarTextView"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/prenom"
                    android:layout_alignParentStart="true"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:layout_gravity="center|right"
                    />
                <EditText
                    android:id="@+id/txtCalendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:hint="Choisir une date"
                    android:textColorHint="#ffa1ca75"
                    android:textSize="@dimen/abc_text_size_small_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sexe"
                    android:id="@+id/sexe"
                    android:layout_below="@+id/date_nais"
                    android:layout_alignParentStart="true"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:layout_gravity="center|right" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/radioF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:onClick="onRadioButtonClicked"
                        android:checked="true"/>
                    <RadioButton android:id="@+id/radioM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:onClick="onRadioButtonClicked"/>
                </RadioGroup>



            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mot de passe"
                    android:id="@+id/mdp"
                    android:layout_below="@+id/courriel"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:textColor="#ff000000"
                    android:layout_gravity="center|right" />
                <EditText
                    android:id="@+id/txtMdp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:password="true"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Confirmer"
                    android:id="@+id/confirm_mdp"
                    android:layout_below="@+id/mdp"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:textColor="#ff000000"
                    android:layout_gravity="center|right" />
                <EditText
                    android:id="@+id/txtConfMdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:password="true"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/TextView_PwdProblem"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="#FF0000"
                android:layout_gravity="center|right" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Courriel"
                    android:id="@+id/courriel"
                    android:layout_below="@+id/sexe"
                    android:layout_alignParentStart="true"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:layout_gravity="center|right" />
                <EditText
                    android:id="@+id/txtCourriel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10" />
            </LinearLayout>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/TextView_mailProblem"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="#FF0000"
                android:layout_gravity="center|right" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créer"
                    android:id="@+id/buttonCreer"
                    android:background="#9fd054"
                    />

            </LinearLayout>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/compteCree"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:textColor="#FF0000"
                    android:layout_gravity="center|right" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>
